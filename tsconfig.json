{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "es2020",
    "allowJs": true,
    "module": "commonjs",
    "declaration": true,
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowUmdGlobalAccess": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {}
  },
  "include": [
    "src/**/*",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "__tests__"
  ]
}
